{
	"name": "workspace",
	"displayName": "Workspace",
	"description": "A more focussed view on your files",
	"author": "Fooxly",
	"publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
	"keywords": [
		"fooxly",
		"vscode",
		"code",
		"focus",
		"sidebar",
		"workspace"
	],
	"homepage": "https://github.com/Fooxly/workspace",
	"repository": {
		"type": "git",
		"url": "https://github.com/Fooxly/workspace.git"
	},
	"bugs": {
		"url": "https://github.com/Fooxly/workspace",
		"email": "bugs@fooxly.com"
	},
	"galleryBanner": {
		"color": "#272729",
		"theme": "dark"
	},
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "workspace.focusFile",
				"title": "Focus file"
			},
			{
				"command": "workspace.removeFile",
				"title": "Forget file"
			},
			{
				"command": "workspace.focusFolder",
				"title": "Focus folder"
			},
			{
				"command": "workspace.removeFolder",
				"title": "Forget folder"
			},
			{
				"command": "workspace.toggleFocus",
				"title": "Toggle workplace"
			}
		],
		"keybindings": [
			{
				"command": "workspace.toggleFocus",
				"key": "ctrl+shift+K",
				"mac": "cmd+shift+K"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "!explorerResourceIsFolder && workspace.inHiddenSpace",
					"command": "workspace.focusFile",
					"group": "workspace"
				},
				{
					"when": "!explorerResourceIsFolder && !workspace.inHiddenSpace",
					"command": "workspace.removeFile",
					"group": "workspace"
				},
				{
					"when": "explorerResourceIsFolder && workspace.inHiddenSpace",
					"command": "workspace.focusFolder",
					"group": "workspace"
				},
				{
					"when": "explorerResourceIsFolder && !workspace.inHiddenSpace",
					"command": "workspace.removeFolder",
					"group": "workspace"
				}
			]
		},

		"configuration": {
			"type": "object",
			"title": "Workspace",
			"properties": {
				"workspace.exclude": {
					"type": "object",
					"description": "The files that need to be excluded inside the workspace"
				},
				"workspace.alwaysShowToggle": {
					"type": "boolean",
					"description": "Always show the toggle inside the statusbar",
					"default": "true"
				},
				"workspace.statusbarPriority": {
					"type": "number",
					"description": "The priority for the statubar item",
					"default": "100"
				}
			}
		}
		
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"@types/rimraf": "^2.0.2",
		"@types/mkdirp": "^0.5.2"
	}
}
