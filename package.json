{
	"name": "workspace",
	"displayName": "Workspace",
	"description": "A more focussed view on your files",
	"author": "Fooxly",
	"publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
	"keywords": [
		"fooxly",
		"vscode",
		"code",
		"focus",
		"sidebar",
		"workspace",
		"file",
		"files",
		"folder",
		"folders",
		"hide",
		"hidden",
		"show"
	],
	"homepage": "https://github.com/Fooxly/workspace",
	"repository": {
		"type": "git",
		"url": "https://github.com/Fooxly/workspace.git"
	},
	"bugs": {
		"url": "https://github.com/Fooxly/workspace",
		"email": "bugs@fooxly.com"
	},
	"galleryBanner": {
		"color": "#FAFAFA",
		"theme": "light"
	},
	"version": "1.0.9",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "workspace.toggleFile",
				"title": "Toggle file"
			},
			{
				"command": "workspace.toggleFolder",
				"title": "Toggle folder"
			}
		],
		"keybindings": [
			{
				"command": "workspace.toggleFocus",
				"key": "ctrl+shift+K",
				"mac": "cmd+shift+K"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "!explorerResourceIsFolder",
					"command": "workspace.toggleFile",
					"group": "workspace"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "workspace.toggleFolder",
					"group": "workspace"
				}
			]
		},
		"colors": [
			{
				"id": "workspace.hiddenColor",
				"description": "Color shown when the hidden files are visible",
				"defaults": {
					"dark": "#E06256",
					"light": "#E06256",
					"highContrast": "#FF0000"
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "Workspace",
			"properties": {
				"workspace.isHidden": {
					"type": "boolean",
					"description": "Are the files hidden or not",
					"default": "true"
				},
				"workspace.alwaysShowToggle": {
					"type": "boolean",
					"description": "Always show the toggle inside the statusbar",
					"default": "true"
				},
				"workspace.statusbarPriority": {
					"type": "number",
					"description": "The priority for the statubar toggle",
					"default": "0"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./ && yarn minify",
		"minify": "uglifyjs-folder -e -x .js -o out out",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/rimraf": "^2.0.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"uglify-js": "^3.6.8",
		"uglifyjs-folder": "^1.5.1",
		"vscode": "^1.1.28"
	}
}
